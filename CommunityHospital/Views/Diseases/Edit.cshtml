{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Diseases</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.DiseasesId)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
